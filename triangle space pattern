#include <stdio.h>

int main()
{
    int n;
    scanf("%d",&n);
    int m=n;
   for(int i=n;i>=1;i--){
       for(int j=1;j<=i;j++){
           printf("%d",j);
       }
       for(int j=n-1;j>=i;j--){
           printf("  ");
       }
       for(int j=m;j>=1;j--){
           printf("%d",j);
       }
         m--;
       printf("\n");
   }
   
   
   for(int i=1;i<=n;i++){
       for(int j=1;j<=i;j++){
           printf("%d",j);
       }
       for(int j=n-1;j>=i;j--){
           printf("  ");
       }
       for(int j=i;j>=1;j--){
           printf("%d",j);
       }
       printf("\n");
   }
}
